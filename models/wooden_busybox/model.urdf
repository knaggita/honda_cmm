<?xml version="1.0"?>
<robot name="busybox">
    <link name="base_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.3 0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.3 0.1" />
            </geometry>
            <material name="brown">
                <color rgba="0.82 0.71 0.55 1.0" />
            </material>
        </visual>
    </link>

   <link name="back_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.05 0.4"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.05 0.4" />
            </geometry>
            <material name="brown">
                <color rgba="0.82 0.71 0.55 1.0" />
            </material>
        </visual>
    </link>

    <joint type="fixed" name="fixed_backboard">
        <child link="back_link" />
        <parent link="base_link" />
        <origin xyz="0 0 0.2" rpy="0 0 0" />
    </joint>
    
    
   <link name="slider">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.1"/>
            </geometry>
            <material name="orange">
                <color rgba="1.0 0.6 0 1.0" />
            </material>
        </visual>
    </link>
    
    <joint type="prismatic" name="prismatic_slider">
        <child link="slider" />
        <parent link="back_link" />
        <axis xyz="1 0 0" />
        <origin xyz="0 0.075 -0.05" rpy="1.57 0 0" />
        <limit lower="-0.2" upper="0.2" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    
    <link name="door">
        <inertial>
            <origin rpy="0 0 0" xyz="-0.075 0 0" />
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="-0.075 0 0" />
            <geometry>
                <box size="0.15 0.01 0.15"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="-0.075 0 0" />
            <geometry>
                <box size="0.15 0.01 0.15" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1.0" />
            </material>
        </visual>
    </link>

    <joint type="revolute" name="revolute_door">
        <child link="door" />
        <parent link="back_link" />
        <axis xyz="0 0 1" />
        <origin xyz="0.1 0.03 0.1" rpy="0 0 0" />
        <limit lower="-1.57" upper="0" />
    </joint>

    <link name="door_handle">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0.1"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.02" length="0.05"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder radius="0.02" length="0.05"/>
            </geometry>
            <material name="blue2">
                <color rgba="0.1 0 0.5 1.0" />
            </material>
        </visual>
    </link>

    <joint type="fixed" name="fixed_door_handle">
        <child link="door_handle" />
        <parent link="door" />
        <origin xyz="-0.125 0.025 0" rpy="1.57 0 0" />
    </joint>

</robot>
