<?xml version="1.0"?>
<robot name="busybox">
    <link name="base_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.6 0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.6 0.6 0.1" />
            </geometry>
            <material name="grey">
                <color rgba="0.1 0.1 0.1 1.0" />
            </material>
        </visual>
    </link>

    <link name="spinner">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
            <mass value="0.1" />
        </inertial>
        <collision name="collision_spinner">
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.12" />
            </geometry>
        </collision>
        <visual name="visual_spinner">
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.05" radius="0.12" />
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1" />
            </material>
        </visual>
        <contact>
            <damping value="0" />
        </contact>
    </link>

    <link name="spinner_handle">

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
            <mass value="0.05" />
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.1" />
            </geometry>
        </collision>
        <visual name="visual_spinner_handle">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.1" />
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1" />
            </material>
        </visual>
    </link>

    <link name="slider">
        <inertial>
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
            <mass value="0.25" />
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <joint type="prismatic" name="slider">
        <child link="slider" />
        <parent link="base_link" />
        <axis xyz="0 1 0" />
        <origin rpy="0 0 0" xyz="-0.2 0.0 0.075" />
        <limit lower="-0.2" upper="0.2" />
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="revolute_spinner">
        <child link="spinner" />
        <parent link="base_link" />
        <axis xyz="0 0 1" />
        <origin rpy="0 0 0" xyz="0.1 0.1 0.075" />
        <limit effort="10" velocity="10" />
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <joint type="continuous" name="spinner_handle">
        <child link="spinner_handle" />
        <parent link="spinner" />
        <axis xyz="0 0 1" />
        <origin xyz="-0.075 0 0.075" rpy="0 0 0"/>
        <limit effort="100" velocity="100" />
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
</robot>
